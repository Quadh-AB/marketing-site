      name="Hussein Taher"
      linkedIn="https://www.linkedin.com/in/husenap/"
      github="https://github.com/Husenap"
      image={Hussein}
    />
    <AboutUsPerson
      name="Hanyu Lin"
      linkedIn="https://www.linkedin.com/in/hanyu-lin/"
      github="https://github.com/Hanyu-Lin"
      image={Hanyu}
    />
    <AboutUsPerson
      name="Hanxuan Lin"
      linkedIn="https://www.linkedin.com/in/hanxuan-lin/"
